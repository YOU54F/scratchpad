{
  "compileOnSave": true,
  "compilerOptions": {
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "moduleResolution": "node",
    "rootDir": "./",
    "lib": ["es2017"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true
  },
  "exclude": ["**/node_modules/**/*", "**/.serverless/**/*", "**/.webpack/**/*"]
}
